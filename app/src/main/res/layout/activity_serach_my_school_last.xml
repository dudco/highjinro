<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_search_my_school"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dudco.highjinro.SearchMySchool"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="맞춤 학교 찾기"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

        </LinearLayout>
        <TextView
            android:id="@+id/search_text_so"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천된 학교들 중에서 자신에게 적합하다 생각되는\n학교를 고르세요!"
            android:lineSpacingExtra="9dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="추천 학교"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:background="@drawable/background_searchschool_list_top"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <ListView
                android:id="@+id/list_1"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/background_searchschool_list">

            </ListView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_final_next"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/backgroud_btn"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="최종 선택"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</layout>